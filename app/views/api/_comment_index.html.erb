<div class="juvia-comment-pure-content well well-small row">
  <div class="span">
    <h2>Comments</h2>
  </div>
</div>
<div id="show_user_comments">
  <%comments.visible.to_a.each do |comment|%>
    <div class="juvia-comment-pure-content well well-small row">
      <div class="span">
        <dl>
          <dt>
            <b>Topic:</b>
            <% if comment.topic and comment.topic.url %>
              <%= link_to truncate(comment.topic.url, :length => 50), comment.topic.url %>
            <% else %>
              None
            <% end %>
          </dt>
          <dd class="lead">
            <br/>
            <%= render_markdown(comment.content.html_safe) %>
          </dd>
          <dd class="juvia-comment-date">
            <%= distance_of_time_in_words(Time.now, comment.created_at) + ' ago' %>
          </dd>
        </dl>
      </div>
    </div>
  <%end%>
</div>
<div class="load_more_contain">
  <img class="hide" src="<%="#{request.protocol}#{request.host_with_port}#{asset_path("loading.gif")}"%>">
  <%  if (total_pages  > 1) %>
    <input type="button" id="append_user_comments" class="btn btn-large lod-more-btn-block" 
        value="Show More ..." data-page = "1" onclick="Juvia.showMoreUserComments(this);" 
        data-user-name="<%= user_name %>"
        data-user-email="<%= user_email %>"
        data-site-key = "<%= site_key %>"
        data-loading-text="Loading..."/>
  <% end %>
</div>
