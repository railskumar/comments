$author_setting = Juvia.$('#juvia-author-setting');
$email_icon = Juvia.$('#email_icon');

<% if @author.notify_me %>
  $author_setting.html("<%= t(:email_notification_on) %>");
  $email_icon.html("<i class='icon-envelope'></i>");
  $author_setting.addClass("turn_on");
  $author_setting.removeClass("turn_off");
<% else %>
  $author_setting.html("<%= t(:email_notification_off) %>");
  $email_icon.html(" ");
  $author_setting.addClass("turn_off");
  $author_setting.removeClass("turn_on");
<% end %>

