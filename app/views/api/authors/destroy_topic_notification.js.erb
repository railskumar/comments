$subscriber_email = Juvia.$('#subscriber_email');
<% if @topic_notification.present? %>
  $subscriber_email.html("<i class='icon-envelope'></i> <span><%= escape_javascript(t(:topic_notification)) %></span>");
<% else %>
  $subscriber_email.html("<i class='icon-envelope'></i> <span><%= escape_javascript(t(:topic_notified)) %></span>");
<% end %>

