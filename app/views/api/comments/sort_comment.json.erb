<% comments = {} %>
<% @comments.each_with_index do |comment,index| %>
    <%
      options = comment_hash(comment, @current_author)
      comments.merge!({index => options})
    %>
<% end %>
<%= {
  :status    => 'ok',
  :action    => 'SortComments',
  :site_key  => @site_key,
  :topic_key => @topic_key,
  :comments  => comments
}.to_json.html_safe %>
