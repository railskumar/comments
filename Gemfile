gem 'devise'
gem 'jquery-rails', '>= 1.0.12'
gem 'kaminari'
gem 'css3buttons'
gem 'cancan'
gem 'inherited_resources'
gem 'exceptional'
gem 'newrelic_rpm'
gem 'redis'
gem 'bcrypt-ruby'
